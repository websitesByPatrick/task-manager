generator client {
  provider = "prisma-client"
  output   = "/prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id Int @id @default(autoincrement())
  title String
  content String?
  completed Boolean @default(false)
  created DateTime @default(now())
}